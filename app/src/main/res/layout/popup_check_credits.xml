<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_check_credits"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/popup_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/check_credits"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2" />

    <View
        android:id="@+id/line"
        android:layout_height="2dip"
        android:layout_width="wrap_content"
        android:layout_below="@+id/popup_title"
        android:background="@color/popupBackground" />

    <TextView
        android:id="@+id/popup_subtitle1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line"
        android:text="@string/api_key"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>
    <Spinner
        android:id="@+id/popup_spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popup_subtitle1"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"/>

</RelativeLayout>
