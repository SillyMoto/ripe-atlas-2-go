<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/relativeLayout1"
    android:layout_width = "fill_parent"
    android:layout_height = "wrap_content">

        <TextView
            android:id = "@+id/id"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "@string/header_column1"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine = "true" />

        <TextView
            android:id = "@+id/type"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "@string/header_column2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine = "true" />

        <TextView
            android:id = "@+id/start"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1.5"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "@string/header_column3"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine = "true" />

         <TextView
            android:id = "@+id/stop"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1.5"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "@string/header_column4"
             android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine = "true" />

        <TextView
            android:id = "@+id/probes"
            android:layout_width = "0dp"
            android:layout_height = "match_parent"
            android:layout_weight = "1"
            android:ellipsize = "end"
            android:padding = "5dp"
            android:text = "@string/header_column5"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:singleLine = "true" />

    <TextView
        android:id = "@+id/status"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/header_column6"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:singleLine = "true" />
</LinearLayout>
